<div class="page-container">
<form action="/students" method="GET">

  <input class="search-bar" type="text" name="name" placeholder="Search for a tutor" value="<%= searchOptions.name %>">
  <!-- <input class="search-bar" type="text" name="studentClass" placeholder="Search for a class" value="<%= searchOptions.studentClass %>"> -->
  <button type="submit">Search</button>

</form>
<br>
<div class="container">
  <h2>List of Available Learning Assistants</h2>
  <ul class="responsive-table">
    <li class="table-header">
      <div class="col col-1">Name</div>
      <div class="col col-2">Subject</div>
      <div class="col col-3">Make an Appointment</div>
     
    </li>
    <% students.forEach(student => { %>
       <li class="table-row">
      <div class="col col-1" data-label="Name"><%= student.name %></div>
      <div class="col col-2" data-label="Class">  <%= student.studentClass %></div>
      <% if (student.studentUrl === undefined) { %>
      <div class="col col-3" data-label="Link"><p>No Link</p></div>
      <%} else { %>
      <div class="col col-3" data-label="Link"><a href="<%= student.studentUrl %>">Make an appointment with <%= student.name %></a></div>
      <% } %>

      
      
    </li>
    
      <% }) %>
  
  </ul>
</div>

</div>

 
 
 



